fn set_value(destination: u64*, value: u64) {
    *destination = value;
}

fn main() {
    let x: u8 = 12;
    let addr_x: u8* = &x;
    printf("%hhu\n", x);

    *addr_x = 13;
    let y: u8 = *addr_x;
    printf("%hhu\n%hhu\n", x, y);

    let string: u8* = "test";
    let i: u8 = 0;

    while (*(string + i)) != 0 {
        let c: u8 = *(string + i);
        printf("%c", c);
        i = i + 1;
    }
    printf("\n");

    let value: u64 = 12;
    set_value(&value, 13);
    printf("%llu\n", value);

    exit(0);
}
