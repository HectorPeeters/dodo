extern "printf";
extern "exit";

struct TestData {
    age: u32,
    is_alive: bool,
}

fn have_birthday(data: TestData*) {
    data.age = data.age + 1;
}

fn print_message(data: TestData*) {
    printf("Age: %u\n", data.age);

    if data.is_alive {
        printf("And is still alive!\n");
    } else {
        printf("And is not alive..\n");
    }
}

fn main() {
    let data: TestData = struct TestData {
        age = 80,
        is_alive = true,
    };

    print_message(&data);

    have_birthday(&data);

    data.is_alive = false;

    print_message(&data);

    exit(0);
}
