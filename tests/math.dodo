fn assert(result, expected) {
    if result - expected {
        printf("Failed: expected %d but got %d\n", expected, result);
        exit(1);
    }
    printf("Success\n");
}

fn main() {
    let x = 12;
    let y = 4;

    assert(x + y, 16);
    assert(x - y, 8);
    assert(x * y, 48);
    assert(x / y, 3);

    exit(0);
}
